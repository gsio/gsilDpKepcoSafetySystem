<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@android:color/white" >

	<RelativeLayout 
        android:id="@+id/menuBar"
        android:background="#202528"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp" >
        

  	    
  	        <LinearLayout 
		    android:id="@+id/titleContentayer"
		    
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_toRightOf="@+id/backIcon"
		    android:gravity="center_vertical|center_horizontal"
		    android:orientation="horizontal">
		      	<ImageView android:id="@+id/barIcon"
	  	        android:layout_width="wrap_content"
	  	        android:layout_height="wrap_content"
	  	        android:layout_centerVertical="true"
	  	        android:src="@drawable/bt6"/>
	  	       	<TextView
	  	        android:id="@+id/titleText"
	  	        android:layout_width="wrap_content"
	  	        android:layout_height="wrap_content"
	  	        android:layout_centerVertical="true"
	  	        android:gravity="center_horizontal"
	  	        android:layout_marginLeft="10dp"
	  	        android:text="근로자 안전관리"
	  	        android:textColor="#ffffff"
	  	        android:textSize="17dp" />
  	    	</LinearLayout>


  	    
    </RelativeLayout>
    
   	   <LinearLayout 
	    android:id="@+id/mainContentLayer"
	    android:layout_below="@+id/menuBar"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:layout_marginTop="15dp"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp">
   	
    <ScrollView 
        android:id="@+id/scrollPerson"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1">
        
	<RelativeLayout
		android:id="@+id/mainsubContentLayer"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
	
		<Button android:id="@+id/regPersonBtn"
		        android:layout_width="match_parent"
		        android:layout_height="50dp"
		        android:textColor="#333333"
		        android:text="근로자등록"
		        android:textSize="15dp"
		        android:layout_marginBottom="5dp"
		        android:layout_marginTop="5dp"
		        android:background="@drawable/select_pencil" />
		

		
		<Button android:id="@+id/manaBeaconBtn"
		    	android:layout_below="@+id/regPersonBtn"
		        android:layout_width="match_parent"
		        android:layout_height="50dp"
		        android:textColor="#333333"
		        android:text="비콘 배정관리"
		        android:textSize="15dp"
		        android:layout_marginBottom="5dp"
		        android:layout_marginTop="5dp"
		        android:background="@drawable/select_pencil" />
	
	<Button android:id="@+id/manaAdminBeaconBtn"
		    	android:layout_below="@+id/manaBeaconBtn"
		        android:layout_width="match_parent"
		        android:layout_height="50dp"
		        android:textColor="#333333"
		        android:text="근로자입사현황"
		        android:textSize="15dp"
		        android:layout_marginBottom="5dp"
		        android:layout_marginTop="5dp"
		        android:background="@drawable/select_pencil" />
	
	<Button android:id="@+id/manaAdminDelBeaconBtn"
		    	android:layout_below="@+id/manaBeaconBtn"
		        android:layout_width="match_parent"
		        android:layout_height="50dp"
		        android:textColor="#333333"
		        android:text="수조내 비콘 삭제"
		        android:textSize="15dp"
		        android:layout_marginBottom="5dp"
		        android:layout_marginTop="5dp"
		        android:background="@drawable/select_pencil" />	
		
	</RelativeLayout>
    </ScrollView>
	
   	
</LinearLayout>
</RelativeLayout>
