<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context="kr.gsil.dpkepco.activity.WorkforceManagementActivity">

<com.ssomai.android.scalablelayout.ScalableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/slMain"
    android:background="@android:color/white"
    app:scale_base_height="1700"
    app:scale_base_width="1080">

    <EditText
        android:id="@+id/searchnameBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_rounded_edit_box"
        android:maxLength="11"
        android:singleLine="true"
        android:textColor="#333333"
        android:paddingLeft="10dp"
        app:scale_textsize="50"
        app:scale_height="110"
        app:scale_left="20"
        app:scale_top="20"
        app:scale_width="700" />

    <Button android:id="@+id/searchBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="검색"
        android:textColor="#333333"
        android:background="@drawable/default_btn"
        app:scale_textsize="50"
        app:scale_height="110"
        app:scale_left="740"
        app:scale_top="20"
        app:scale_width="320" />

    <ListView
        android:id="@+id/personlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:scale_left="20"
        app:scale_top="150"
        app:scale_width="1040"
        app:scale_height="1550"
        >
    </ListView>
</com.ssomai.android.scalablelayout.ScalableLayout>

</FrameLayout>